{
    "compilerOptions": {
      "lib": ["es2017", "DOM", "ES2015"],
      "module": "commonjs",
      "target": "es2017",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "outDir": ".build",
      "baseUrl": ".",
      "rootDir": "./",
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "removeComments": false,
      "noImplicitAny": false,
      "esModuleInterop": true
    },
    "types": ["node", "aws-sdk"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
  }
  